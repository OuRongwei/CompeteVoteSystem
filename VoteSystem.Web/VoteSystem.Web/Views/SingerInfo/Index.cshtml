@model IQueryable<VoteSystem.Model.SingerAndSocreViewModel>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>菜鸟教程(runoob.com)</title>
    <style>
        .grid-container {
            height: auto;
            width: auto;
            display: grid;
            grid-template-columns: auto auto auto;
            grid-gap: 10px;
            background-color: #2196F3;
            padding: 10px;
        }

            .grid-container > div {
                background-color: rgba(255, 255, 255, 0.8);
                border: 1px solid black;
                text-align: center;
                font-size: 30px;
            }

        img {
            width: 300px;
            height: 300px;
        }

        .grid-container > a {
            color: aqua;
        }
    </style>

    <script>

        function alertInfo() {
            var temp=document.getElementById("sspan").innerHTML;
            if (temp=="NoLogin") {
                alert("未登录!!!");
            }
            
    }
    </script>
</head>
<body>
    <span id="sspan">
        @Html.ValidationMessage("CredentialError", new { style = "color:red;" })
        <script>
            alertInfo();
        </script>
    </span>
    <input type="text" placeholder="请输入歌手号数或歌手姓名" /><input type="button" value="查询" />
    <div class="grid-container">
        @foreach (var singer in Model)
        {
            <div>

                @if (!string.IsNullOrEmpty(singer.ImageUrl))
                {
                    <img src="http://localhost:8080/@singer.ImageUrl" />
                }
                <p>@singer.Id 号 @singer.Name</p>
                <p>票数：@singer.PiaoShu</p>

                <a href="~/UserVote/Index/@singer.Id">投票</a>
                <a href="~/SingerInfo/SingerDetails/@singer.Id">详情</a>
            </div>

        }


    </div>

    <p>网格容器的所有直系子元素将成为网格元素。</p>

</body>
</html>